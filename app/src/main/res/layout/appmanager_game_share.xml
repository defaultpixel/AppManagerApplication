<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appmanager_share_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_gameshare_shape">



    <ImageView
        android:id="@+id/appmanager_share_icon"
        android:src="@drawable/a2"
        android:layout_height="72dp"
        android:layout_width="72dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="46dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/appmanager_share_appname_text"
        android:layout_height="25dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/color_light_blue"
        android:text="未知应用1"
        android:layout_width="wrap_content"
        android:layout_marginTop="-17dp"
        app:layout_constraintTop_toBottomOf="@+id/appmanager_share_icon"
        android:layout_marginLeft="39dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/appmanager_share_zxing"
        android:layout_height="318dp"
        android:layout_width="320dp"
        android:background="@color/cardview_shadow_start_color"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.583" />

    <ImageView
        android:id="@+id/appmanager_share_cancel"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/clear"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="476dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.852" />



</android.support.constraint.ConstraintLayout>